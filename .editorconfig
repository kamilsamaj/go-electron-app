; https://editorconfig.org/

root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab

[{*.yml,*.yaml,*.json}]
indent_style = space
indent_size = 2

eclint_indent_style = unset
